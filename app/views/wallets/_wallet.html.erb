<div id="<%= dom_id wallet %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nome:</strong>
    <%= wallet.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tipo de conta:</strong>
    <%= wallet.kind_of %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total:</strong>
    <%= wallet.movements.sum(:amount) %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this wallet", wallet, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this wallet', edit_wallet_path(wallet), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
