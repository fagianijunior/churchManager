<%= simple_form_for(@administration) do |f| %>
  <% if administration.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(administration.errors.count, "error") %> prohibited this administration from being saved:</h2>

      <ul>
        <% administration.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= f.input :user_id, collection: User.order(:first_name), value: administration.user %>
  </div>

  <div class="my-5">
    <%= f.input :occupation_id, collection: Occupation.all, value: administration.occupation %>
  </div>

  <div class="my-5">
    <%= f.input :titular %>
  </div>

  <div class="my-5">
    <%= f.input :start_date, as: :string %>
  </div>

  <div class="my-5">
    <%= f.input :end_date, as: :string %>
  </div>

  <div class="my-5">
    <%= f.input :salary %>
  </div>

  <div class="my-5">
    <%= f.input :payment_day, min: 1, max: 30 %>
  </div>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
