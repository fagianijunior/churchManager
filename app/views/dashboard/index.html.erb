<div class="mt-4 w-full grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-4">
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @monthMovementsIn %></span>
        <h3 class="text-base font-normal text-gray-500">Entradas no mês</h3>
      </div>
      <div class="ml-5 w-0 flex items-center justify-end flex-1 text-green-500 text-base font-bold">
        <%# 14.6% %>
        <%# <i class="fa fa-angle-double-right" aria-hidden="true"></i> %>
      </div>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @monthMovementsOut %></span>
        <h3 class="text-base font-normal text-gray-500">Saídas no mês</h3>
      </div>
      <div class="ml-5 w-0 flex items-center justify-end flex-1 text-green-500 text-base font-bold">
        <%# 14.6% %>
        <%# <i class="fa fa-angle-double-right" aria-hidden="true"></i> %>
      </div>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @monthMovementsBalance %></span>
        <h3 class="text-base font-normal text-gray-500">Saldo até o mês</h3>
      </div>
      <div class="ml-5 w-0 flex items-center justify-end flex-1 text-red-500 text-base font-bold">
        <%# -2.7% %>
        <%# <i class="fa fa-angle-double-right" aria-hidden="true"></i> %>
      </div>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <%= form_with url: "/", method: :get do |f| %>
          <%= f.select(:month, options_for_select([
            ['Janeiro',1],['Fevereiro',2],['Março',3],['Abriu',4],['Maio',5],['Junho',6],['Julho',7],['Agosto',8],
            ['Setembro',9],['Outubro',10],['Novembro',11],['Dezembro',12]
          ], selected: @month)) %>
          <%= f.select(:year, options_for_select([Movement.first.created_at.year..Date.today.year], selected: @year)) unless Movement.all.empty? %>
          <%= f.submit 'Trocar Mês' %>
        <% end %>
        <%= link_to "Mês atual", root_path, class: "text-base font-normal text-gray-500" %>
      </div>
    </div>
  </div>
</div>
<div class="mt-4 w-full grid grid-cols-2 gap-4">
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Entradas e Saídas no mês</h3>
    </div>
    <div class="flex items-center">
      <%= line_chart @monthMovementsChart %>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Saldo até o mês</h3>
    </div>
    <div class="flex items-center">
      <%= line_chart @monthMovementsBalanceChart %>
    </div>
  </div>
</div>
<div class="mt-4 w-full grid grid-cols-2 gap-4">
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <h3 class="text-xl leading-none font-bold text-gray-900 mb-10">Entradas e saídas no mês - Extrato</h3>
    <div class="block w-full overflow-x-auto">
      <div class="container">
        <div class="flex flex-col md:grid grid-cols-9 mx-auto p-2 text-blue-50">
          <% Movement.where(kind_of: ['entrada','saida']).each do |movement| %>
              <div class="flex <% 'flex-row-reverse' if movement.entrada? %> md:contents">
                <% unless movement.entrada? %>
                  <div class="col-start-5 col-end-6 mr-10 md:mx-auto relative">
                    <div class="h-full w-6 flex items-center justify-center">
                      <div class="h-full w-1 bg-blue-800 pointer-events-none"></div>
                    </div>
                    <div class="w-6 h-6 absolute top-1/2 -mt-3 rounded-full bg-blue-500 shadow"></div>
                  </div>
                <% end %>
                <div class="<%= movement.entrada? ? ' bg-blue-500 col-start-1 col-end-5 ml-auto' : 'bg-red-500 col-start-6 col-end-10 mr-auto' %> p-4 rounded-xl my-4 shadow-md">
                  <p class="leading-tight text-justify">
                    <%= link_to movement do %>
                      <%= "#{movement.payment_date.day()} | #{number_to_currency(movement.amount, unit: 'R$')} | " %>
                      <%= movement.wallet.dizimo? ? movement.wallet.name.downcase : movement.description.truncate(10) %>
                    <% end %>
                  </p>
                </div>
                <% if movement.entrada? %>
                  <div class="col-start-5 col-end-6 md:mx-auto relative mr-10">
                    <div class="h-full w-6 flex items-center justify-center">
                      <div class="h-full w-1 bg-blue-800 pointer-events-none"></div>
                    </div>
                    <div class="w-6 h-6 absolute top-1/2 -mt-3 rounded-full bg-blue-500 shadow"></div>
                  </div>
                <% end %>
              </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <h3 class="text-xl leading-none font-bold text-gray-900 mb-10">Dízimos no mês</h3>
    <div class="block w-full overflow-x-auto">
      <table class="items-center w-full bg-transparent border-collapse">
        <thead>
          <tr>
            <th class="px-4 bg-gray-50 text-gray-700 align-middle py-3 text-xs font-semibold text-left uppercase border-l-0 border-r-0 whitespace-nowrap">#</th>
            <th class="px-4 bg-gray-50 text-gray-700 align-middle py-3 text-xs font-semibold text-left uppercase border-l-0 border-r-0 whitespace-nowrap">Valor</th>
            <th class="px-4 bg-gray-50 text-gray-700 align-middle py-3 text-xs font-semibold text-left uppercase border-l-0 border-r-0 whitespace-nowrap min-w-140-px"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @monthTithe.each do |tithe| %>
            <tr class="text-gray-500">
              <th class="border-t-0 px-4 align-middle text-sm font-normal whitespace-nowrap p-4 text-left">
                <%= tithe.user.id %>
              </th>
              <td class="border-t-0 px-4 align-middle text-xs font-medium text-gray-900 whitespace-nowrap p-4">
                <%= tithe.amount %>
              </td>
              <td class="border-t-0 px-4 align-middle text-xs whitespace-nowrap p-4">
                <div class="flex items-center">
                  <span class="mr-2 text-xs font-medium"><%= amount_percent(tithe.amount,@date_range) %></span>
                  <div class="relative w-full">
                    <div class="w-full bg-gray-200 rounded-sm h-2">
                      <div class="bg-cyan-600 h-2 rounded-sm" style="width: <%= amount_percent(tithe.amount,@date_range) %>"></div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="grid grid-cols-1 2xl:grid-cols-3 xl:gap-4 my-4">
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Últimos membros</h3>
      <%= link_to users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
