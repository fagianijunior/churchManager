<div class="mt-4 w-full grid grid-cols-1 gap-4">
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Saldo até o mês</h3>
    </div>
    <div class="flex items-center">
      <%= line_chart @monthMovementsBalanceChart, colors: ['green','blue','orange','silver','red'] %>
    </div>
  </div>
</div>
<div class="mt-4 w-full grid grid-cols-2 gap-4">
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <h3 class="text-xl leading-none font-bold text-gray-900 mb-10">Entradas e saídas no mês - Extrato</h3>
    <div class="block w-full overflow-x-auto">
      <div class="container">
        <div class="flex flex-col md:grid grid-cols-9 mx-auto p-2 text-blue-50">
          <% @monthlyStatement.each do |movement| %>
            <div class="flex <% 'flex-row-reverse' unless movement.saida? %> md:contents">
              <% if movement.saida? %>
                <div class="col-start-5 col-end-6 mr-10 md:mx-auto relative">
                  <div class="h-full w-6 flex items-center justify-center">
                    <div class="h-full w-1 bg-blue-800 pointer-events-none"></div>
                  </div>
                  <div class="w-6 h-6 absolute top-1/2 -mt-3 rounded-full bg-blue-500 shadow"></div>
                </div>
              <% end %>
              <div class="<%= movement.saida? ? 'bg-red-500 col-start-6 col-end-10 mr-auto' : ' bg-blue-500 col-start-1 col-end-5 ml-auto' %> p-4 rounded-xl my-4 shadow-md">
                <p class="leading-tight text-justify">
                  <%= link_to movement, title: movement.description do %>
                    <%= "#{movement.payment_date.day()} | #{number_to_currency(movement.amount, unit: 'R$')} | " %>
                    <%= movement.dizimo? ? 'Dízimo' : movement.oferta? ? 'Oferta' : movement.description.truncate(20) %>
                  <% end %>
                </p>
              </div>
              <% unless movement.saida? %>
                <div class="col-start-5 col-end-6 md:mx-auto relative mr-10">
                  <div class="h-full w-6 flex items-center justify-center">
                    <div class="h-full w-1 bg-blue-800 pointer-events-none"></div>
                  </div>
                  <div class="w-6 h-6 absolute top-1/2 -mt-3 rounded-full bg-blue-500 shadow"></div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
    <h3 class="text-xl leading-none font-bold text-gray-900 mb-10">Dízimos no mês</h3>
    <div class="block w-full overflow-x-auto">
      <table class="items-center w-full bg-transparent border-collapse">
        <thead>
          <tr>
            <th class="px-4 bg-gray-50 text-gray-700 align-middle py-3 text-xs font-semibold text-left uppercase border-l-0 border-r-0 whitespace-nowrap">#</th>
            <th class="px-4 bg-gray-50 text-gray-700 align-middle py-3 text-xs font-semibold text-left uppercase border-l-0 border-r-0 whitespace-nowrap">Valor</th>
            <th class="px-4 bg-gray-50 text-gray-700 align-middle py-3 text-xs font-semibold text-left uppercase border-l-0 border-r-0 whitespace-nowrap min-w-140-px"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @monthTithe.each do |tithe| %>
            <tr class="text-gray-500">
              <th class="border-t-0 px-4 align-middle text-sm font-normal whitespace-nowrap p-4 text-left">
                <%= tithe.user.id %>
              </th>
              <td class="border-t-0 px-4 align-middle text-xs font-medium text-gray-900 whitespace-nowrap p-4">
                <%= number_to_currency(tithe.amount) %>
              </td>
              <td class="border-t-0 px-4 align-middle text-xs whitespace-nowrap p-4">
                <div class="flex items-center">
                  <span class="mr-2 text-xs font-medium"><%= amount_percent(tithe.amount,@date_range) %></span>
                  <div class="relative w-full">
                    <div class="w-full bg-gray-200 rounded-sm h-2">
                      <div class="bg-cyan-600 h-2 rounded-sm" style="width: <%= amount_percent(tithe.amount,@date_range) %>"></div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="grid grid-cols-1 2xl:grid-cols-3 xl:gap-4 my-4">
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Últimos membros</h3>
      <%= link_to users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @lastMembers.each do |user| %>
          <li class="py-3 sm:py-4">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar.variant(:micro), class: "h-8 w-8 rounded-full" %>
                <% else %>
                  <%= image_tag "users/avatar-default-micro.png", class: "h-8 w-8 rounded-full" %>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= user.contact_number %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <%= l user.member_since %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Aniversariantes do mês</h3>
      <%= link_to users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @monthBirthdays.each do |user| %>
          <li class="py-3 sm:py-4">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar.variant(:micro), class: "h-8 w-8 rounded-full" %>
                <% else %>
                  <%= image_tag "users/avatar-default-micro.png", class: "h-8 w-8 rounded-full" %>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= l user.birth_date, format: :long %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <%= user.age %> anos
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Próximos aniversariantes</h3>
      <%= link_to users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @upcomingBirthdays.each do |user| %>
          <li class="py-3 sm:py-4 <%= (15.days.before.yday()..Date.today.yday()).include?(user.birth_date.yday()) ? 'bg-slate-200' : '' %>">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar.variant(:micro), class: "h-8 w-8 rounded-full" %>
                <% else %>
                  <%= image_tag "users/avatar-default-micro.png", class: "h-8 w-8 rounded-full" %>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= l user.birth_date, format: :long %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <%= user.age %> anos
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Eventos do mês</h3>
      <%= link_to events_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @monthEvents.each do |event| %>
          <li class="py-3 sm:py-4">
            <div class="flex items-center space-x-4">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= event.title %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= l event.start_date, format: :long %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <% if event.start_date > DateTime.now %>
                  <%= distance_of_time_in_words_to_now(event.start_date) %>
                <% else %>
                  Finalizado
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Próximos eventos</h3>
      <%= link_to events_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @upcomigEvents.each do |event| %>
          <li class="py-3 sm:py-4">
            <div class="flex items-center space-x-4">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= event.title %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= l event.start_date, format: :long %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <% if event.start_date > DateTime.now and event.end_date > DateTime.now %>
                  <%= distance_of_time_in_words_to_now(event.start_date) %>
                <% elsif event.start_date < DateTime.now and event.end_date < DateTime.now %>
                  Finalizado
                <% else %>
                  Em curso
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Administração</h3>
      <%= link_to administrations_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @employees.each do |adm| %>
          <li class="py-3 sm:py-4">
            <div class="flex items-center space-x-4">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= adm.user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= 'Vice' unless adm.titular %>
                  <%= adm.occupation.title %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <% if adm.start_date < DateTime.now %>
                  <%= distance_of_time_in_words_to_now(adm.start_date) %>
                <% else %>
                  Não iniciado
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
