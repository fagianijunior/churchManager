            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <img class="h-8 w-8 rounded-full" src="https://demo.themesberg.com/windster/images/users/neil-sims.png" alt="Neil image">
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= user.contact_number %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <%= l user.member_since %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Aniversariantes do mês</h3>
      <%= link_to users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @monthBirthdays.each do |user| %>
          <li class="py-3 sm:py-4">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <img class="h-8 w-8 rounded-full" src="https://demo.themesberg.com/windster/images/users/neil-sims.png" alt="Neil image">
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= l user.birth_date, format: :long %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <%= user.age %> anos
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bg-white shadow rounded-lg mb-4 p-4 sm:p-6 h-full">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold leading-none text-gray-900">Próximos aniversariantes</h3>
      <%= link_to users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg inline-flex items-center p-2" do %>
        Ver todos
      <% end %>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200">
        <% @upcomingBirthdays.each do |user| %>
          <li class="py-3 sm:py-4 <%= (15.days.before.yday()..Date.today.yday()).include?(user.birth_date.yday()) ? 'bg-slate-200' : '' %>">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <img class="h-8 w-8 rounded-full" src="https://demo.themesberg.com/windster/images/users/neil-sims.png" alt="Neil image">
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= user.full_name %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= l user.birth_date, format: :long %>
                </p>
              </div>
              <div class="inline-flex items-center text-base font-semibold text-gray-900">
                <%= user.age %> anos
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>